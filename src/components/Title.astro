---
interface Props {
  title: string
  size?: 'xl' | 'md' | 'xs'
  tag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
  class?: string
}
const { title, size = 'xl', tag = 'h1', class: className } = Astro.props
const sizeVariant = {
  xs: 'text-xs',
  xl: 'text-5xl',
  md: 'text-3xl'
}

const Tag = tag
---

<Tag class:list={['font-bold text-orange-950', sizeVariant[size], className]}>
  {title}
</Tag>
